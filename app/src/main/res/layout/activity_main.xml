<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.kelvindu.learning.ud834_course.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/HeaderStyle"
                android:text="@string/team_a" />
            <TextView
                android:id="@+id/team_a_score"
                style="@style/ScoreStyle" />

            <Button
                style="@style/ButtonStyle"
                android:onClick="skorTigaPoinA"
                android:text="@string/_3_points" />
            <Button
                style="@style/ButtonStyle"
                android:onClick="skorDuaPoinA"
                android:text="@string/_2_points" />
            <Button
                style="@style/ButtonStyle"
                android:onClick="freeThrowA"
                android:text="@string/free_throw" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/HeaderStyle"
                android:text="@string/team_b"/>
            <TextView
                android:id="@+id/team_b_score"
                style="@style/ScoreStyle"  />

            <Button
                style="@style/ButtonStyle"
                android:onClick="skorTigaPoinB"
                android:text="@string/_3_points" />
            <Button
                style="@style/ButtonStyle"
                android:onClick="skorDuaPoinB"
                android:text="@string/_2_points" />
            <Button
                style="@style/ButtonStyle"
                android:onClick="freeThrowB"
                android:text="@string/free_throw" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="tombolReset"
        android:text="@string/reset" />

</RelativeLayout>
